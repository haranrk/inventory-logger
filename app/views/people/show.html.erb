<p id="flash"><%= notice %></p>
<p>
  <h1><%= @person.name %></h1>
</p>

<p>
  <strong>Number:</strong>
  <%= @person.number %>
</p>

<p>
  <strong>Roll no:</strong>
  <%= @person.roll_no %>
</p>
<h2> Borrowing History </h2>
<table class="table">
	<thead>
			<tr>
				<th>Equipment</th>
				<th>Time Logged</th>
			</tr>
	</thead>
	<tbody>
		
		<% @person.logs.each do |log| %>
		<tr>
			<td><%= link_to log.equipment.name, equipment_path(log.equipment) %></td>
			<td><%= log.created_at %></td>
		</tr>
		<%end%>
	</tbody>
	
</table>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
